{
  "name": "receiptsplit-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev -w web",
    "build:web": "npm run build -w web",
    "build:shared": "npm run build -w @receiptsplit/shared",
    "dev:mobile": "npm run start -w mobile",
    "dev:mobile:tunnel": "npm run start:tunnel -w mobile",
    "web": "npm run dev -w web",
    "mobile": "npm run start -w mobile"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  }
}
